---
import Layout from '../layouts/Layout.astro';
import AnimatedBlob from '../components/AnimatedBlob.astro';
import CTAButton from '../components/CTAButton.astro';
---

<Layout title="Home | Backup Failed Foundation">
    <!-- Animated Hero Section -->
    <section class="relative flex flex-col items-center justify-center min-h-[70vh] py-24 overflow-hidden">
        <AnimatedBlob class="absolute inset-0 -z-10" />
        <div class="relative z-10 text-center">
            <h1
                class="text-6xl font-extrabold mb-6 animate-fade-in-up bg-gradient-to-r from-blue-500 via-pink-400 to-purple-500 bg-clip-text text-transparent drop-shadow-xl"
                style="text-shadow: 0 4px 32px rgba(0,0,0,0.55), 0 1px 0 #fff;"
            >
                Empowering Nonprofits with Accessible IT Solutions
            </h1>
            <p class="text-2xl mb-10 animate-fade-in-up delay-150 text-white/80 drop-shadow">
                Free & affordable IT resources, education, and support for mission-driven teams.
            </p>
            <div class="flex flex-col sm:flex-row gap-8 justify-center mt-12">
                <div
                    class="bg-white/90 rounded-xl shadow-lg p-8 flex-1 min-w-[260px] border transition-all duration-500 hover:scale-105 hover:shadow-[0_16px_48px_0_rgba(80,0,120,0.25),0_2px_16px_0_rgba(0,0,0,0.18)] hover:border-2 hover:border-blue-600"
                >
                    <h2 class="text-xl font-bold text-gray-900 mb-3 flex items-center justify-center gap-2">
                        <span>üõ†Ô∏è</span> Need IT Solutions?
                    </h2>
                    <p class="mb-4 text-gray-700">See all our free and paid services for nonprofits and mission-driven orgs.</p>
                    <CTAButton text="Explore Our Services" link="/services" />
                </div>
                <div
                    class="bg-blue-900/90 rounded-xl shadow-lg p-8 flex-1 min-w-[260px] border transition-all duration-500 hover:scale-105 hover:shadow-[0_16px_48px_0_rgba(80,0,120,0.25),0_2px_16px_0_rgba(0,0,0,0.18)] hover:border-2 hover:border-blue-600"
                >
                    <h2 class="text-xl font-bold text-white mb-3 flex items-center justify-center gap-2">
                        <span>üíª</span> Remote Support
                    </h2>
                    <p class="mb-4 text-blue-100">Start a secure remote session with our team for direct help.</p>
                    <CTAButton text="Remote Support" link="https://downloads.level.io/support/install-level-bf2.msi" />
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in-up {
        animation: fade-in-up 1s cubic-bezier(0.23, 1.01, 0.32, 1) both;
    }
    .animate-fade-in-up.delay-150 {
        animation-delay: 0.15s;
    }
</style>

<script>
    document.querySelector('.hamburger')?.addEventListener('click', () => {
        document.querySelector('nav ul')?.classList.toggle('expanded');
    });
</script>
