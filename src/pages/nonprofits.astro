---
import Layout from '../layouts/Layout.astro';
import CTAButton from '../components/CTAButton.astro';

const title = 'Nonprofit IT';
const description =
    'IT management for nonprofits where reliability matters more than buzzwords. Clear systems, predictable support, and Microsoft 365 run in ways staff and volunteers can actually use.';

const freeForNonprofits = [
    {
        title: 'IT Consultation',
        detail: 'A focused review of what you have today, what’s risky, and a simple next-step plan.'
    },
    {
        title: 'Domain Migration',
        detail: 'DNS changes needed to connect email and cloud services to your domain.'
    },
    {
        title: 'Standard Email Migration',
        detail: 'Mail, calendar, and contacts moved with minimal downtime.'
    },
    {
        title: 'Technology Grants Guidance',
        detail: 'Help identifying nonprofit programs that offer discounts for your organization.'
    }
];

const flexibleForNonprofits = [
    {
        title: 'Office Moves & Tech Setup',
        detail: 'Internet/Wi‑Fi, printers, phones, and workstations set up so day one isn’t chaos.'
    },
    {
        title: 'Endpoint Security Hardening',
        detail: 'Practical security baselines and policies to reduce risk without breaking day-to-day work.'
    },
    {
        title: 'Microsoft 365 User & Device Onboarding',
        detail: 'Device standards and onboarding that keep logins and access predictable.'
    },
    {
        title: 'Custom Automation & Scripting',
        detail: 'Small automations that remove repetitive manual work from your team.'
    }
];
---

<Layout title={title} description={description}>
    <main class="mx-auto px-6 pt-0 pb-12">
        <section class="edge-to-edge bg-gradient-to-r from-sky-900 via-indigo-900 to-purple-900 text-white" aria-labelledby="nonprofits-hero">
            <div class="grid md:grid-cols-2 items-center">
                <div
                    class="h-72 md:h-[420px] bg-cover bg-center rounded-none"
                    style="background-image:url('https://storage001backupfailed.blob.core.windows.net/stor-container-web/BLOG_IMG/pexels-diohasbi-3280130.jpg');"
                    role="img"
                    aria-label="IT professional helping an organization"
                >
                    <div class="h-full w-full bg-black/40"></div>
                </div>

                <div id="nonprofits-hero" class="anchor px-6 md:px-12 py-12 md:py-20">
                    <h1 class="text-3xl md:text-4xl font-extrabold">Nonprofit IT. Done Right.</h1>
                    <p class="mt-4 text-sky-100 max-w-2xl">
                        IT management for nonprofits where reliability matters more than buzzwords. Clear systems, predictable support, and Microsoft 365 run in
                        ways staff and volunteers can actually use.
                    </p>

                    <ul class="mt-6 space-y-3 text-sky-100">
                        <li class="flex items-start gap-3">
                            <span class="text-green-300">✓</span><span>Clear guidance on what's free, discounted, or worth paying for</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <span class="text-green-300">✓</span><span>Practical security and access standards that staff can follow</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <span class="text-green-300">✓</span><span>Support that’s accountable, consistent, and doesn’t add chaos or escalation</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <span class="text-green-300">✓</span><span>Pay-what-you-can or flexible options when budgets are tight</span>
                        </li>
                    </ul>

                    <div class="mt-8 flex gap-4 items-center">
                        <CTAButton text="Book a nonprofit consult" link="/contact?topic=Nonprofit%20IT%20Consultation" />
                    </div>
                </div>
            </div>
        </section>

        <section id="what-can-be-free" class="anchor mt-12">
            <div class="max-w-7xl mx-auto">
                <div class="bg-white text-slate-900 border border-slate-200 shadow-2xl rounded-2xl p-6 md:p-10">
                    <h2 class="text-2xl md:text-3xl font-extrabold">What’s free (or flexible) for nonprofits</h2>

                    <div class="mt-8 grid lg:grid-cols-2 gap-8">
                        <div>
                            <h3 class="text-lg font-bold text-slate-900">Free for nonprofits</h3>
                            <ul class="mt-4 space-y-4">
                                {
                                    freeForNonprofits.map((item) => (
                                        <li>
                                            <div class="font-semibold">{item.title}</div>
                                            <div class="text-slate-700">{item.detail}</div>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>

                        <div>
                            <h3 class="text-lg font-bold text-slate-900">Pay‑what‑you‑can</h3>
                            <ul class="mt-4 space-y-4">
                                {
                                    flexibleForNonprofits.map((item) => (
                                        <li>
                                            <div class="font-semibold">{item.title}</div>
                                            <div class="text-slate-700">{item.detail}</div>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="mt-8 flex flex-wrap gap-4">
                        <CTAButton text="Talk to us" link="/contact?topic=Nonprofit%20IT%20Consultation" />
                    </div>
                </div>
            </div>
        </section>

        <section class="mt-12">
            <div class="max-w-7xl mx-auto">
                <div class="bg-white text-slate-900 border border-slate-200 shadow-2xl rounded-2xl p-6 md:p-10">
                    <h2 class="text-2xl md:text-3xl font-extrabold">What can be free through nonprofit programs</h2>
                    <p class="mt-3 text-slate-700 max-w-3xl">
                        Many nonprofits qualify for donated or discounted software, hardware, or services. The exact offers change over time and depend on
                        eligibility, but the common categories are consistent.
                    </p>

                    <ul class="mt-6 space-y-3 text-slate-700">
                        <li class="flex items-start gap-3">
                            <span class="text-emerald-600">✓</span><span
                                ><span class="font-semibold">Microsoft 365 or Google Workspace nonprofit pricing</span></span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <span class="text-emerald-600">✓</span><span
                                ><span class="font-semibold">Cloud credits</span> that can offset hosting or project work</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <span class="text-emerald-600">✓</span><span
                                ><span class="font-semibold">Software discounts</span> for common nonprofit tooling (varies by provider)</span
                            >
                        </li>
                    </ul>

                    <div class="mt-8 flex flex-wrap gap-4">
                        <CTAButton text="Get help with nonprofit setup" link="/contact?topic=Nonprofit%20IT%20Consultation" />
                    </div>
                </div>
            </div>
        </section>

        <section class="mt-12">
            <div class="max-w-7xl mx-auto">
                <div class="bg-white text-slate-900 border border-slate-200 shadow-2xl rounded-2xl p-6 md:p-10">
                    <h2 class="text-2xl md:text-3xl font-extrabold">How we support your nonprofit</h2>
                    <p class="mt-3 text-slate-700 max-w-3xl">
                        Some nonprofits just need a clean setup and a plan. Others need ongoing managed support. Either way, the goal is the same: fewer
                        surprises, fewer interruptions, and a system your team can actually use.
                    </p>

                    <div class="mt-8 grid md:grid-cols-3 gap-6">
                        <div class="rounded-2xl border border-slate-200 bg-slate-50 p-6">
                            <div class="font-bold">Identity & access</div>
                            <div class="mt-2 text-slate-700">Logins that make sense, MFA that’s usable, and access that’s easy to manage.</div>
                        </div>
                        <div class="rounded-2xl border border-slate-200 bg-slate-50 p-6">
                            <div class="font-bold">Devices & standards</div>
                            <div class="mt-2 text-slate-700">Consistent device setup so new staff/volunteers can get working quickly.</div>
                        </div>
                        <div class="rounded-2xl border border-slate-200 bg-slate-50 p-6">
                            <div class="font-bold">Backup & recovery</div>
                            <div class="mt-2 text-slate-700">Backups configured so you can recover when something goes wrong.</div>
                        </div>
                    </div>

                    <div class="mt-8">
                        <CTAButton text="Ready to get started?" link="/contact?topic=Nonprofit%20IT%20Consultation" />
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
