<Layout title="Services | Backup Failed Foundation">
    <ContextAlert class="mb-8" />

    <main class="py-16 bg-white-50">
        <!-- Free Services Section -->
        <section class="mb-16 bg-white px-6 py-12 max-w-7xl mx-auto shadow-lg">
