                            <p class="mt-4 text-sm text-gray-500 font-semibold" set:html={service.price} />
                            {service.cta && service.CtaLink ? (
                                <div class="mt-4 flex justify-center">
                                    <CTAButton text={service.cta} link={service.CtaLink} />
                                </div>
                            ) : null}
